    function getAllFood() {
        let foodList = $("#foodList");
        $.post("/food", {
                target: "court_id"
            },
            function(arr, status) {
                //console.log(arr);
                if (status == 'success' && arr) {
                    FOOD_LIST = arr;
                    foodList.empty();
                    let len = arr.length;
                    for (let i = 0; i < len; i++) {
                        foodList.append('<tr id="item' + arr[i].id + '">\
                                            <td>' + arr[i].id + '</td>\
                                            <td>' + arr[i].name + '</td>\
                                            <td>' + arr[i].price + '</td>\
                                            <td>' + (arr[i].available ? '‚úîÔ∏è' : '‚ùå') + '</td>\
                                            <td>' + arr[i].type + '</td>\
                                            <td>' + arr[i].description + '</td>\
                                            <td> <img style="max-width:30vw; max-height:20vh" src="/images/food/' + arr[i].id + '.jpg" alt="' + arr[i].name + '"> </td>\
                                            <td><button onclick="deleteFood(' + arr[i].id + ');">üö´</button><button onclick="editFood(' + i + ');">üìù</button><td>\
                                        </tr>');
                    }
